package br.edu.ifpb.sicAgro.services;

import java.util.List;

import br.edu.ifpb.sicAgro.exceptions.ServiceSicAgroException;
import br.edu.ifpb.sicAgro.exceptions.SicAgroException;
import br.edu.ifpb.sicAgro.exceptions.SicAgroExceptionHandler;

/**
 * 
 * @author  <a href="https://github.com/FranckAJ">Franck Arag√£o</a>
 *
 * @param <T>
 * @param <K>
 */
public interface Service<T,K> {
	
	/**
	 * 
	 * @param entity
	 * @throws SicAgroException 
	 * @throws SicAgroExceptionHandler 
	 */
	public void add(T entity) throws ServiceSicAgroException;
	
	/**
	 * 
	 * @param entity
	 * @return
	 */
	public T update(T entity) throws ServiceSicAgroException;
	
	/**
	 * 
	 * @param entity
	 */
	public void remove(T entity) throws ServiceSicAgroException;
	
	/**
	 * 
	 * @param id
	 * @return
	 */
	public T findById(K id) throws ServiceSicAgroException;
	
	/**
	 * 
	 * @return
	 */
	public List<T> findAll() throws ServiceSicAgroException;

}
