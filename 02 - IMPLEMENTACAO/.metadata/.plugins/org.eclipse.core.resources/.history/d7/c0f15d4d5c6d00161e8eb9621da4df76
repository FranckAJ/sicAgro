package br.edu.ifpb.sicAgro.dao;

import java.util.List;

import br.edu.ifpb.sicAgro.exceptions.PersistenceSicAgroException;

/**
 * 
 * @author <a href="https://github.com/FranckAJ">Franck Arag√£o</a>
 *
 * @param <T>
 * @param <K>
 */
public interface DAO<T,K>{
	
	/**
	 * 
	 * @param entity
	 */
	public void add(T entity);
	
	/**
	 * 
	 * @param entity
	 * @return
	 */
	public T update(T entity);
	
	/**
	 * 
	 * @param entity
	 */
	public void remove(T entity);
	
	/**
	 * 
	 * @param id
	 * @return
	 */
	public T findById(K id) throws PersistenceSicAgroException;
	
	/**
	 * 
	 * @return
	 */
	public List<T> findAll() throws PersistenceSicAgroException;

}
