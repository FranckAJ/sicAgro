package br.edu.ifpb.sicAgro.validation.impl;

import javax.inject.Inject;

import br.edu.ifpb.sicAgro.exceptions.SicAgroExceptionHandler;
import br.edu.ifpb.sicAgro.services.ProdutorService;

public class CPFUniqueValidator{
	
	@Inject
	private ProdutorService produtorSerice;

	public static void validate(String cpf) throws SicAgroExceptionHandler {
		if(produtorSerice.isCPFExists(cpf)){
			throw new SicAgroExceptionHandler("JÃ¡ existe um produtor cadastraod com este CPF: "+cpf);
		}
	}
}
