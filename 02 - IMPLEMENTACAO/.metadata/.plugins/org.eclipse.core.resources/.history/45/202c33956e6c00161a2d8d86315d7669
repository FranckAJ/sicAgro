package br.edu.ifpb.sicAgro.validation.impl;

import javax.enterprise.context.RequestScoped;
import javax.faces.component.UIComponent;
import javax.faces.context.FacesContext;
import javax.faces.validator.FacesValidator;
import javax.faces.validator.Validator;
import javax.faces.validator.ValidatorException;
import javax.inject.Inject;
import javax.inject.Named;

import br.edu.ifpb.sicAgro.services.ProdutorService;

@FacesValidator("CPFUnique")
@Named
@RequestScoped
public class CPFUniqueValidator implements Validator{
	
	@Inject
	private ProdutorService produtorSerice;

	@Override
	public void validate(FacesContext context, UIComponent component, Object value) throws ValidatorException {
			
		if(!produtorSerice.isCPFExists(value)){
			
		}
	}

}
